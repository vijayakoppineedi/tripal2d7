/** 
* Filter callback for our doggone filter.
*/
function _remove_mailto_process($text, $filter, $format, $langcode, $cache, $cache_id) {
  return preg_replace('#<a href=[^>]+>([\w.-]+@(?:[\w-]+[\.{1,3}\w{2,4}]*))</a>#',"$1", $text);  
}


