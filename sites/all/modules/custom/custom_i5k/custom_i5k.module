  switch ($delta) {   
    case 'statistics':
      $block['subject'] = t('Manual annotation statistics');      
	  $js_path = drupal_get_path('module', 'custom_i5k').'/anno-summary.js';	  
      $content = '<div id="stats"></div> <div class="more-link"><span class="icon">&nbsp;</span><a href="/statistics">MORE</a></div>';
      $block['content'] =  $content;	    
      drupal_add_js($js_path);   			  
      break;
	case 'filedata_index':
      $block['subject'] = t('Species file data indexing'); 
	  
      require_once("/_h5ai/server/php/inc/util.php");
	  require_once("/_h5ai/server/php/inc/setup.php");
	  require_once("/_h5ai/server/php/inc/class-api.php");
	  require_once("/_h5ai/server/php/inc/class-app.php");
	  require_once("/_h5ai/server/php/inc/class-archive.php");
	  require_once("/_h5ai/server/php/inc/class-item.php");
	  require_once("/_h5ai/server/php/inc/class-thumb.php");
	  
      // node load to get organism genus and species. 
	  $nid = arg(1);
	  $node = node_load($nid);
	  
      $node_organism = $node->organism->genus."_".$node->organism->species; 
	  
	  $url = "/sites/default/files/data/Arthropoda/";
	  
	  $short_name = strtolower(substr($node->organism->genus, 0, 3).substr($node->organism->species, 0, 3));	  
	  
	  $node_organism = rawurlencode("(".$node_organism.")");
	  
	  $species_url = $url.$short_name."-".$node_organism."/";	    
	  
      setup($species_url);
	  
      $app = new App();

	  if (has_request_param("action")) {
        $api = new Api($app);
		$api->apply();
	  } else {	
        define("FALLBACK", $app->get_fallback());   
      }
	 
	  $block['content'] = FALLBACK;
	  drupal_add_js('/_h5ai/client/js/scripts_untree.js');  
	  break;
  }
  
  return $block;  
}


